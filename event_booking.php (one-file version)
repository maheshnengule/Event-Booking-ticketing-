<?php
// ========================================
// All-in-One Event Booking System by Mahesh
// ========================================

// --- Database Connection (AWS RDS) ---
$host = "YOUR-RDS-ENDPOINT";
$user = "YOUR-RDS-USERNAME";
$pass = "YOUR-RDS-PASSWORD";
$dbname = "event_booking";

$conn = new mysqli($host, $user, $pass, $dbname);
if ($conn->connect_error) {
    die("Database connection failed: " . $conn->connect_error);
}

// Handle booking submission
if ($_SERVER['REQUEST_METHOD'] === 'POST' && isset($_POST['book_event'])) {
    $event_id = intval($_POST['event_id']);
    $name = $conn->real_escape_string($_POST['name']);
    $email = $conn->real_escape_string($_POST['email']);
    $tickets = intval($_POST['tickets']);

    // Fetch event price
    $res = $conn->query("SELECT price FROM events WHERE id=$event_id");
    $row = $res->fetch_assoc();
    $price = $row['price'];
    $total_amount = $price * $tickets;

    // Insert booking
    $stmt = $conn->prepare("INSERT INTO bookings (event_id, name, email, tickets, total_amount) VALUES (?,?,?,?,?)");
    $stmt->bind_param("issid", $event_id, $name, $email, $tickets, $total_amount);
    $stmt->execute();

    echo "<!DOCTYPE html><html><head>
        <title>Booking Confirmed</title>
        <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' rel='stylesheet'>
        <style>body{background:#f0f8ff}</style>
        </head><body class='text-center mt-5'>
        <div class='container'>
        <h1 class='text-success'>üéâ Thank you $name!</h1>
        <p>Your booking for Event #$event_id is confirmed.</p>
        <table class='table table-bordered'>
            <tr><th>Name</th><td>$name</td></tr>
            <tr><th>Email</th><td>$email</td></tr>
            <tr><th>Tickets</th><td>$tickets</td></tr>
            <tr><th>Total Amount</th><td>‚Çπ$total_amount</td></tr>
        </table>
        <a href='event_booking.php' class='btn btn-primary'>Back to Events</a>
        </div></body></html>";
    exit;
}

// Fetch all events
$events = $conn->query("SELECT * FROM events ORDER BY date ASC");
?>
<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Event Booking System</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body{background:linear-gradient(120deg,#84fab0,#8fd3f4);min-height:100vh}
    .event-card{transition:.3s;box-shadow:0 4px 10px rgba(0,0,0,0.1)}
    .event-card:hover{transform:scale(1.03);box-shadow:0 6px 15px rgba(0,0,0,0.2)}
  </style>
</head>
<body>
<div class="container my-5">
  <h1 class="text-center mb-4">üéüÔ∏è Mahesh Classes Event Booking</h1>
  <div class="row">
    <?php while($row = $events->fetch_assoc()): ?>
      <div class="col-md-4">
        <div class="card event-card mb-4">
          <div class="card-body">
            <h5 class="card-title"><?php echo htmlspecialchars($row['name']); ?></h5>
            <p class="card-text"><?php echo htmlspecialchars($row['description']); ?></p>
            <p><b>Date:</b> <?php echo $row['date']; ?> | <b>Time:</b> <?php echo $row['time']; ?></p>
            <p><b>Seats:</b> <?php echo $row['total_seats']; ?> | <b>Price:</b> ‚Çπ<?php echo $row['price']; ?></p>
            <form method="post">
              <input type="hidden" name="event_id" value="<?php echo $row['id']; ?>">
              <div class="mb-2">
                <input type="text" name="name" class="form-control" placeholder="Your Name" required>
              </div>
              <div class="mb-2">
                <input type="email" name="email" class="form-control" placeholder="Your Email" required>
              </div>
              <div class="mb-2">
                <input type="number" name="tickets" class="form-control" placeholder="Tickets" min="1" max="10" required>
              </div>
              <button type="submit" name="book_event" class="btn btn-success w-100">Book Now</button>
            </form>
          </div>
        </div>
      </div>
    <?php endwhile; ?>
  </div>
</div>
</body>
</html>
